<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tourist_spots_category_text_view"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tourist_spots_category" />

        <TextView
            android:id="@+id/food_category_text_view"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/food_category" />

        <TextView
            android:id="@+id/traffic_category_text_view"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/traffic_category" />

        <TextView
            android:id="@+id/hotel_category_text_view"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_category" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>