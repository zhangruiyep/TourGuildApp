<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Category" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="ItemTitle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorItemTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemInfo" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorItemTitle</item>
    </style>

</resources>
